&rcc {
	//clocks = <&pll>;
	clocks = <&clk_hse>;
	//clock-frequency = <DT_FREQ_M(100)>;
	clock-frequency = <DT_FREQ_M(8)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <1>;
	apb2-prescaler = <1>;
};

