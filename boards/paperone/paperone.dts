/dts-v1/;
#include <st/f4/stm32f413Xg.dtsi>
#include <st/f4/stm32f413v(g-h)tx-pinctrl.dtsi>
#include "arduino_r3_connector.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "HSW paperone board";
	//compatible = "st,stm32f413";

	chosen {
		//zephyr,console = &usart1;
		//zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	leds {
		compatible = "gpio-leds";
		heartbit_led: led_0 {
			gpios = <&gpiob 10 GPIO_ACTIVE_HIGH>;
			label = "User LED";
		};
	};

	aliases {
		heartbit = &heartbit_led;
	};
};

&clk_lsi {
	status = "okay";
};

&clk_hse {
	//hse-bypass;
	clock-frequency = <DT_FREQ_M(8)>; /* STLink 8MHz clock */
	status = "okay";
};


